extends layout

block content
  h1= title
  p Step 1 : Upload keys of channel:

  form(class="form-signin" method="POST" action="./new/step1")
            #error
                if error
                    p.text-danger Error!!!

            div.in
              input(type="text" name="pubkey" placeholder="Publish key" class="form-control" required autofocus)
              input(type="text" name="subkey" placeholder="Subscribe key" class="form-control" required autofocus)
              input(type="text" name="seckey" placeholder="Secret key"  class="form-control" required autofocus)
              - var buttonClass=['btn', 'btn-lg', 'btn-primary', 'btn-block','buttonClass'];
              button(class=buttonClass type="submit") Upload
          
            
